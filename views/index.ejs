<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/header.ejs') %>
		<title>Kort</title>
		<script type="text/javascript" src="/js/index.js"></script>
	</head>
	<body class="background-gray">
		<div class="container">
			<div class="bgcontainer">
				<div class='row'>
					<div class='col-md-12'>
						<div class='siteTitle text-center'>KORT</div>
					</div>
				</div>
				<div class="row">
					<div class='col-md-12'>
						<div class="siteSubtitle text-center">Card Sorting, Tree Testing, and Product Reaction Cards</div>
					</div>
				</div>
				<div class='row'>
					<div class='col-md-4 col-md-offset-4'>
						<form class="form-horizontal" action="/login" method="post">
							<div class="form-group">
							<h4 class='text-center'></h4>
								<div class="inputGroupContainer">
									<input name="email" placeholder="Email" class="form-control" type="text" />
							  </div>
							</div>
							<div class="form-group">
								<div class="inputGroupContainer">
									<input name="password" placeholder="Password" class="form-control" type="password" />
							  	</div>
							</div>
							<div class="form-group">
								<button type="submit" class="btn btn-primary btn-block">Login</button>
							</div>
							<% if (loginMessage.length > 0) { %>
							<div class="alert alert-danger loginMessage"><%= loginMessage %></div>
							<% } %>
						</form>
						<br>
						<% if (allowGoogleAuth) { %>
							<a href="/auth/google" class="btn btn-danger center-block">Login or Register via Google <span class="fa fa-google-plus"></span></a>
						<% } %>
					</div>
				</div>
			</div>	
			<% if (version.length > 0) { %>
			<p class="text-right">Version: <%= version %></p>
			<% } %>
		</div>
	</body>
</html>

