	<body>
		<%- include('../partials/admin_header.ejs') %>
		<div class='container'>
			<a href='/studies'><i class="fa fa-chevron-left icon-sm" aria-hidden="true"></i> Back to Studies</a>
			<h1>Results for <%= study.title %></h1>
			<br>
			 <div class="well">
                <%- include('../partials/resultstable.ejs') %>
            </div>
			<div class="well">
				<h3>Words by Response</h3>
				<hr>
				<table id='prc_results_table'>
					<thead>
						<tr>
							<th>Response #</th>
							<th>Title / Name</th>
							<th>Date Submitted</th>
							<th>Words</th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<% for(var i=0; i<completeResponses.length; i++) {%>
						<tr>
							<td><%= i+1 %></td>
							<td><%= completeResponses[i].title %></td>
							<td><%= completeResponses[i].date.toLocaleDateString() %> (<%= completeResponses[i].date.toLocaleTimeString() %>)</td>
							<% for(var j=0; j<completeResponses[i].data.length; j++) {%>
								<td><%= JSON.stringify(completeResponses[i].data[j]).replace(/['"]+/g, '') %></td>
							<% } %>
						</tr>
					<% } %>
				</table>
			</div>
			<div class="well">
				<h3>Responses by Task</h3>
				<hr>
				<table class="table" id="words_table">
					<thead>
						<tr>
							<th>#</th>
							<th>Word</th>
							<th># of selections<br>(<%= completeResponses.length %> responses total)</th>
							<th>Percentage</th>
							<th>Bargraph</th>
						</tr>
					</thead>
					<tbody>
					<% for(var i=0; i < words.length; i++) {%>
					<tr>
						<td><%= i+1 %></td>
						<td><%= words[i] %></td>
						<td><%= counts[i] %></td>
						<td><%= Math.floor((counts[i]/completeResponses.length)*100) %>%</td>
						<td style="width:50%">
							<div class="progress">
								<div class="progress-bar" role="progressbar" style="width:<%= (counts[i]/completeResponses.length)*100 %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
							</div>	
						</td>
					</tr>
					<% } %>
				</table>
			</div>
		</div>
